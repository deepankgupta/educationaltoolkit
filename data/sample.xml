<?xml version="1.0"?>

<test id="SampleTest001">
    <!-- sample.xml
         Sample test to examine parser.
      -->
    <question id="MyQuestion01" type="short_answer">
        <credits>4</credits>
        <text>What is 2 + 2?</text> <!-- perhaps content is a better name? -->
        <expected-length>2</expected-length>
        <difficulty>Easy</difficulty>
    </question>
    <question id="MyQuestion02" type="multiple_choice">
        <credits>10</credits>
        <text>The fourth root of 16 is <blank length="3" />.</text>
        <difficulty>Medium</difficulty>
        <choice name="a">2</choice>
        <choice name="b">4</choice>
        <choice name="c">12</choice>
    </question>
    <question id="MyQuestion03" type="true_false">
        <credits>50</credits>
        <text>The square root of -1 is a real number.</text>
        <difficulty>Hard</difficulty>
    </question>
    <question id="MyQuestion04" type="flashcard">
        <credits>2</credits>
        <text>Mathematics</text>
        <back-text>Involves many numbers</back-text>
        <difficulty>Easy</difficulty>
    </question>
    <question id="MyQuestion05" type="matching">
        <credits>10</credits>
        <text>Match the following terms.</text>
        <difficulty>Medium</difficulty>
        <key>Addition</key>
        <key>Subtraction</key>
        <key>Multiplication</key>
        <answer>The adding of multiple copies of a number</answer>
        <answer>The combining of two numbers</answer>
        <answer>The difference of two numbers</answer>
    </question>
    <question id="MyQuestion06" type="short_answer">
        <img src="http://www.google.com/intl/en_ALL/images/logo.gif"
             title="Company logo"
             type="image/gif" />
        <credits>4</credits>
        <text>What is this company?</text>
        <expected-length>6</expected-length>
        <difficulty>Easy</difficulty>
    </question>
    <question id="MyQuestion07" type="true_false">
        <image-page title="Image group">
            <img title="Picture 1"></img>
            <img title="Picture 2"></img>
        </image-page>
        <credits>4</credits>
        <text>The two pictures I have are of an "A" and a "B".</text>
        <difficulty>Easy</difficulty>
    </question>
</test>
